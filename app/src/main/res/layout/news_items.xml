<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:cardCornerRadius="1dp"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
<LinearLayout


    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <LinearLayout
        android:layout_marginTop="10dp"
        android:layout_marginBottom="10dp"
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
    <RelativeLayout
        android:layout_weight="1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/tvNewsTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Jay-Z and Jack Dorsey Launch Bitcoin Academy for New Generation of Crypto Bros
"
            android:textColor="@color/black"
            android:textSize="15dp"
            android:textStyle="bold" />

        <LinearLayout
            android:orientation="horizontal"
            android:layout_marginTop="10dp"
            android:layout_below="@+id/tvNewsTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
        <TextView

            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/tvNewsSource"
            android:text="The Guardian"
            android:textColor="@color/black"
            />
            <ImageView
                android:layout_width="10dp"
                android:layout_height="10dp"
                android:src="@drawable/ic_baseline_circle_24"
                android:layout_gravity="center"
                android:layout_marginTop="1dp"
                android:layout_marginLeft="3dp"
                android:layout_marginRight="3dp"
                />
            <TextView

                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/tvNewsETime"
                android:text="13h ago"

                />
        </LinearLayout>

    </RelativeLayout>
    <androidx.cardview.widget.CardView
        app:cardCornerRadius="20dp"
        android:layout_gravity="center"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
    <ImageView
        android:scaleType="center"
        android:id="@+id/ivNewsImg"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:src="@drawable/ic_launcher_background"
        />
    </androidx.cardview.widget.CardView>


</LinearLayout>
    <RelativeLayout
        android:background="#C7CEDD"
        android:layout_width="match_parent"
        android:layout_height="2dp">

    </RelativeLayout>

</LinearLayout>
</com.google.android.material.card.MaterialCardView>